{
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "importMap": "./import_map.json",
  "tasks": {
    "check": "deno check src/mod.ts",
    "buildNpm": "deno run --allow-all scripts/buildNpm.ts",
    "test": "deno test test/"
  },
  "lint": {
    "files": {
      "exclude": [
        "npm/",
        "npm-test/"
      ]
    }
  }
}
